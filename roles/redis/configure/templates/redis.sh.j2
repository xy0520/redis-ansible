#!/bin/bash
CMD=$1

NAME="redis-server"
EXEC="/usr/local/bin/$NAME"
PID_FILE="{{ item.pid }}"
REDIS_CONFIG="{{ item.conf }}"

start() {
 echo "Start Redis {{ item.port }} Server"
 $EXEC $REDIS_CONFIG
}

stop() {
    echo "Stop Redis {{ item.port }} Server"
    kill -9 `cat $PID_FILE`
}

restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo $"Usage: $0 {start|stop|restart}"
        exit 2
esac
exit $?
